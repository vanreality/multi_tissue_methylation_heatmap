params {
    input_csv      = null
    input_bed      = null
    output_dir     = null
}

process {
    executor = 'slurm'

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: 'copy',
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: 'BEDTOOLS_EXTRACT_SITES' {
        container = "${baseDir}/images/common_tools.sif"
        cpus      = 1
        memory    = '4.GB'
        time      = 24.h
        queue     = 'fat4way'
    }

    withName: 'CALCULATE_DMR_METHYLATION' {
        container = "${baseDir}/images/common_tools.sif"
        cpus      = 1
        memory    = '4.GB'
        time      = 24.h
        queue     = 'fat4way'
    }

    withName: 'GENERATE_METHYLATION_MATRIX' {
        container = "${baseDir}/images/common_tools.sif"
        cpus      = 20
        memory    = '64.GB'
        time      = 24.h
        queue     = 'fat4way'
    }
}

profiles {
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        singularity.runOptions = "-B /home,/gpfs1,/gpfs3"
    }
}

manifest {
    author = 'vanreality'
    name = 'multi_tissue_methylation_heatmap'
    description = ''
    version = 'dev1.0'
}